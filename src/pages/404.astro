---
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout
  title="404 | Page Not Found"
  description="The page you are looking for doesn't exist or might have been removed."
>
  <main class="error-page">
    <div class="container">
      <h1 class="primary-heading">
        The page you are looking for doesn't exist or might have been removed.
      </h1>

      <a href="/">Go back home</a>
    </div>
  </main>
</MainLayout>

<style lang="scss">
  @use "../styles/scss/abstracts/" as *;

  .error-page {
    padding: var(--spacer-400);
    text-align: center;

    .container {
      --container-max-width: 45rem;
    }

    .primary-heading {
      color: var(--clr-primary-200);
      margin-block-end: var(--spacer-500);
    }

    a {
      color: var(--clr-primary-100);
      text-decoration: underline;

      &:hover {
        opacity: 0.7;
      }
    }
  }
</style>
